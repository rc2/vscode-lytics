{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lytics Query Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#entity"
		},
		{
			"include": "#storage"
		},
		{
			"include": "#string"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lytics-lql",
					"match": "(?i)\\b(SELECT|FROM|INTO|BY|WHERE|OR|NOT|ALIAS)\\b"
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.separator.lytics-lql",
					"match": ","
				}
			]
		},
		"entity": {
			"patterns": [
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(count|set|min|max|sum)\\b(?=\\()"
				},
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(all|any|exists|in|eq|ne|lt|le|gt|ge|not|or)\\b(?=\\()"
				},
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(join|len|oneof|replace|split|strip|string.uppercase|string.lowercase|string.titlecase|contains|hasprefix|hassuffix)\\b(?=\\()"
				},
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(hash.sip|hash.md5|hash.sha1|hash.sha256|hash.sha512|encoding.b64encode|encoding.b64decode)\\b(?=\\()"
				},
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(toint|tonumber|todate|tobool)\\b(?=\\()"
				},
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(filter|len|map|match|mapkeys|mapvalues|mapinvert|array.index|array.slice)\\b(?=\\()"
				},
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(email|emailname|emaildomain|domain|host|path|qs|urldecode|urlminusqa|useragent|useragent.map)\\b(?=\\()"
				},
				{
					"name": "entity.name.function.lytics-lql",
					"match": "\\b(dayofweek|epochms|extract|hourofday|hourofweek|mm|monthofyear|now|seconds|todate|todatein|totimestamp|yy|yymm|timebucket)\\b(?=\\()"
				},
				{
					"name": "entity.other.lytics-lql",
					"match": "`(.*?)`"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"name": "storage.type.lytics-lql",
					"match": "\\b(int|number|bool|date|string)\\b"
				},
				{
					"name": "storage.type.lytics-lql",
					"match": "[^\\w]\\[\\](time|string)\\b"
				}
			]
		},
		"string": {
			"name": "string.quoted.double.lytics-lql",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lytics-lql",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.lytics"
}