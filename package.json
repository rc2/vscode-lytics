{
  "name": "vscode-lytics",
  "displayName": "Lytics",
  "description": "Manage and maintain your Lytics account",
  "version": "0.0.13",
  "author": {
    "name": "Adam Conn",
    "email": "adam.conn@lytics.com"
  },
  "publisher": "AdamConn",
  "repository": {
    "type": "git",
    "url": "https://github.com/lytics/vscode-lytics"
  },
  "icon": "images/lytics.png",
  "keywords": [
    "Lytics"
  ],
  "engines": {
    "vscode": "^1.24.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lytics.watch.folder",
    "onCommand:lytics.classify.active.editor",
    "onCommand:lytics.lql.generate",
    "onCommand:lytics.accounts.add",
    "onCommand:lytics.accounts.connect",
    "onCommand:lytics.accounts.export",
    "onLanguage:lql",
    "onView:lytics.accounts.explorer"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "lql",
        "aliases": [
          "LQL",
          "lql"
        ],
        "extensions": [
          ".lql"
        ],
        "firstLine": "^SELECT\\s.*",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lql",
        "scopeName": "source.lql",
        "path": "./syntaxes/lql.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lytics",
          "title": "Lytics",
          "icon": "resources/lytics.svg"
        }
      ]
    },
    "keybindings": [
      {
        "command": "workbench.view.extension.lytics",
        "key": "ctrl+alt+l"
      }
    ],
    "views": {
      "lytics": [
        {
          "id": "lytics.accounts.explorer",
          "name": "Accounts"
        },
        {
          "id": "lytics.queries.explorer",
          "name": "Queries"
        },
        {
          "id": "lytics.streams.explorer",
          "name": "Data Streams"
        },
        {
          "id": "lytics.tables.explorer",
          "name": "Tables"
        },
        {
          "id": "lytics.campaigns.explorer",
          "name": "Campaigns"
        }
      ]
    },
    "commands": [
      {
        "command": "lytics.watch.folder",
        "title": "Lytics: Watch Folder for Changes",
        "category": "Lytics"
      },
      {
        "command": "lytics.classify.file",
        "title": "Lytics: Run Content Classification",
        "category": "Lytics"
      },
      {
        "command": "lytics.classify.active.editor",
        "title": "Lytics: Run Content Classification on Active Editor",
        "category": "Lytics"
      },
      {
        "command": "lytics.lql.generate",
        "title": "Lytics: Generate LQL",
        "category": "Lytics"
      },
      {
        "command": "lytics.accounts.show",
        "title": "Show Account",
        "icon": {
          "light": "resources/icons/light/info.svg",
          "dark": "resources/icons/dark/info.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.accounts.connect",
        "title": "Connect",
        "icon": {
          "light": "resources/icons/light/power.svg",
          "dark": "resources/icons/dark/power.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.accounts.export",
        "title": "Export Accounts",
        "category": "Lytics"
      },
      {
        "command": "lytics.accounts.disconnect",
        "title": "Disconnect",
        "icon": {
          "light": "resources/icons/light/power-off.svg",
          "dark": "resources/icons/dark/power-off.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.accounts.add",
        "title": "Add Account",
        "icon": {
          "light": "resources/icons/light/add.svg",
          "dark": "resources/icons/dark/add.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.accounts.remove",
        "title": "Remove Account",
        "category": "Lytics"
      },
      {
        "command": "lytics.accounts.refresh",
        "title": "Refresh Account List",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.queries.refresh",
        "title": "Refresh Query List",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.queries.download",
        "title": "Download Queries",
        "icon": {
          "light": "resources/icons/light/get-app.svg",
          "dark": "resources/icons/dark/get-app.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.query.download",
        "title": "Download Query",
        "icon": {
          "light": "resources/icons/light/get-app.svg",
          "dark": "resources/icons/dark/get-app.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.query.open",
        "title": "Open Query",
        "icon": {
          "light": "resources/icons/light/open-in-new.svg",
          "dark": "resources/icons/dark/open-in-new.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.queries.upload",
        "title": "Lytics: Upload Query",
        "icon": {
          "light": "resources/icons/light/cloud-upload.svg",
          "dark": "resources/icons/dark/cloud-upload.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.streams.refresh",
        "title": "Refresh Stream List",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.stream.queries",
        "title": "Show Query Info",
        "icon": {
          "light": "resources/icons/light/question.svg",
          "dark": "resources/icons/dark/question.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.stream.field.info",
        "title": "Show Stream Field Info",
        "icon": {
          "light": "resources/icons/light/info.svg",
          "dark": "resources/icons/dark/info.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.tables.add",
        "title": "Add Table",
        "icon": {
          "light": "resources/icons/light/add.svg",
          "dark": "resources/icons/dark/add.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.tables.remove",
        "title": "Remove Table",
        "category": "Lytics"
      },
      {
        "command": "lytics.tables.refresh",
        "title": "Refresh Table List",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.table.field.search",
        "title": "Search",
        "icon": {
          "light": "resources/icons/light/search.svg",
          "dark": "resources/icons/dark/search.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.table.field.info",
        "title": "Show Table Field Info",
        "icon": {
          "light": "resources/icons/light/info.svg",
          "dark": "resources/icons/dark/info.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.campaigns.refresh",
        "title": "Refresh Campaign List",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.campaign.info",
        "title": "Show Campaign Info",
        "icon": {
          "light": "resources/icons/light/info.svg",
          "dark": "resources/icons/dark/info.svg"
        },
        "category": "Lytics"
      },
      {
        "command": "lytics.campaign.variation.info",
        "title": "Show Campaign Variation Info",
        "icon": {
          "light": "resources/icons/light/info.svg",
          "dark": "resources/icons/dark/info.svg"
        },
        "category": "Lytics"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "lytics.watch.folder",
          "group": "Lytics",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "lytics.classify.file",
          "when": "false"
        },
        {
          "command": "lytics.classify.active.editor",
          "group": "Lytics",
          "when": "resourceIsFile"
        },
        {
          "command": "lytics.lql.generate",
          "when": "false"
        },
        {
          "command": "lytics.accounts.disconnect",
          "when": "false"
        },
        {
          "command": "lytics.accounts.show",
          "when": "false"
        },
        {
          "command": "lytics.accounts.refresh",
          "when": "false"
        },
        {
          "command": "lytics.accounts.remove",
          "when": "false"
        },
        {
          "command": "lytics.queries.refresh",
          "when": "false"
        },
        {
          "command": "lytics.queries.download",
          "when": "false"
        },
        {
          "command": "lytics.query.download",
          "when": "false"
        },
        {
          "command": "lytics.query.open",
          "when": "false"
        },
        {
          "command": "lytics.queries.upload",
          "when": "false"
        },
        {
          "command": "lytics.streams.refresh",
          "when": "false"
        },
        {
          "command": "lytics.stream.queries",
          "when": "false"
        },
        {
          "command": "lytics.stream.field.info",
          "when": "false"
        },
        {
          "command": "lytics.tables.add",
          "when": "false"
        },
        {
          "command": "lytics.tables.remove",
          "when": "false"
        },
        {
          "command": "lytics.tables.refresh",
          "when": "false"
        },
        {
          "command": "lytics.table.field.search",
          "when": "false"
        },
        {
          "command": "lytics.table.field.info",
          "when": "false"
        },
        {
          "command": "lytics.campaign.info",
          "when": "false"
        },
        {
          "command": "lytics.campaign.variation.info",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "lytics.queries.upload",
          "group": "Lytics",
          "when": "editorLangId == lql && editorReadOnly == false"
        },
        {
          "command": "lytics.lql.generate",
          "group": "Lytics",
          "when": "editorLangId == CSV"
        }
      ],
      "explorer/context": [
        {
          "command": "lytics.queries.upload",
          "group": "Lytics",
          "when": "resourceLangId == lql"
        },
        {
          "command": "lytics.lql.generate",
          "group": "Lytics",
          "when": "resourceLangId == CSV"
        },
        {
          "command": "lytics.watch.folder",
          "when": "explorerResourceIsFolder",
          "group": "Lytics"
        },
        {
          "command": "lytics.classify.file",
          "when": "resourceIsFile",
          "group": "Lytics"
        }
      ],
      "view/title": [
        {
          "command": "lytics.accounts.add",
          "when": "view == lytics.accounts.explorer",
          "group": "navigation"
        },
        {
          "command": "lytics.accounts.refresh",
          "when": "view == lytics.accounts.explorer",
          "group": "navigation"
        },
        {
          "command": "lytics.queries.refresh",
          "when": "view == lytics.queries.explorer",
          "group": "navigation"
        },
        {
          "command": "lytics.streams.refresh",
          "when": "view == lytics.streams.explorer",
          "group": "navigation"
        },
        {
          "command": "lytics.tables.add",
          "when": "view == lytics.tables.explorer",
          "group": "navigation"
        },
        {
          "command": "lytics.tables.refresh",
          "when": "view == lytics.tables.explorer",
          "group": "navigation"
        },
        {
          "command": "lytics.campaigns.refresh",
          "when": "view == lytics.campaigns.explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lytics.accounts.connect",
          "when": "view == lytics.accounts.explorer && viewItem == 'account'"
        },
        {
          "command": "lytics.accounts.connect",
          "when": "view == lytics.accounts.explorer && viewItem == 'account'",
          "group": "inline"
        },
        {
          "command": "lytics.accounts.disconnect",
          "when": "view == lytics.accounts.explorer && viewItem == 'account'"
        },
        {
          "command": "lytics.accounts.disconnect",
          "when": "view == lytics.accounts.explorer && viewItem == 'account'",
          "group": "inline"
        },
        {
          "command": "lytics.accounts.remove",
          "when": "view == lytics.accounts.explorer && viewItem == 'account'"
        },
        {
          "command": "lytics.accounts.show",
          "when": "view == lytics.accounts.explorer && viewItem == 'account'"
        },
        {
          "command": "lytics.accounts.show",
          "when": "view == lytics.accounts.explorer && viewItem == 'account'",
          "group": "inline"
        },
        {
          "command": "lytics.queries.download",
          "when": "view == lytics.queries.explorer && viewItem == 'table'"
        },
        {
          "command": "lytics.queries.download",
          "when": "view == lytics.queries.explorer && viewItem == 'table'",
          "group": "inline"
        },
        {
          "command": "lytics.query.open",
          "when": "view == lytics.queries.explorer && viewItem == 'query'"
        },
        {
          "command": "lytics.query.open",
          "when": "view == lytics.queries.explorer && viewItem == 'query'",
          "group": "inline"
        },
        {
          "command": "lytics.query.download",
          "when": "view == lytics.queries.explorer && viewItem == 'query'"
        },
        {
          "command": "lytics.query.download",
          "when": "view == lytics.queries.explorer && viewItem == 'query'",
          "group": "inline"
        },
        {
          "command": "lytics.stream.queries",
          "when": "view == lytics.streams.explorer && viewItem == 'stream'",
          "group": "inline"
        },
        {
          "command": "lytics.stream.field.info",
          "when": "view == lytics.streams.explorer && viewItem == 'field'",
          "group": "inline"
        },
        {
          "command": "lytics.table.field.search",
          "when": "view == lytics.tables.explorer && viewItem == 'field-identifier'",
          "group": "inline"
        },
        {
          "command": "lytics.table.field.info",
          "when": "view == lytics.tables.explorer && viewItem == 'field'",
          "group": "inline"
        },
        {
          "command": "lytics.table.field.info",
          "when": "view == lytics.tables.explorer && viewItem == 'field-identifier'",
          "group": "inline"
        },
        {
          "command": "lytics.tables.remove",
          "when": "view == lytics.tables.explorer && viewItem == 'table'"
        },
        {
          "command": "lytics.campaign.info",
          "when": "view == lytics.campaigns.explorer && viewItem == 'campaign'",
          "group": "inline"
        },
        {
          "command": "lytics.campaign.variation.info",
          "when": "view == lytics.campaigns.explorer && viewItem == 'campaignVariation'",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Lytics configuration",
      "properties": {
        "lytics.accounts": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "accounts",
            "properties": {
              "aid": {
                "type": "int",
                "description": "Account ID"
              },
              "apikey": {
                "type": "string",
                "description": "API key"
              }
            }
          },
          "default": [],
          "description": "Accounts displayed in Lytics account explorer"
        },
        "lytics.watch": {
          "type": "object",
          "properties": {
            "max": {
              "type": "integer",
              "description": "Maximum number of records read from the data file"
            },
            "colorize": {
              "type": "boolean",
              "description": "Enable colorized JSON output"
            }
          },
          "default": {},
          "description": "Lytics watch settings"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.69",
    "@types/query-string": "^6.1.0",
    "tslint": "^5.11.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "lytics-js": "latest",
    "path": "^0.12.7"
  }
}